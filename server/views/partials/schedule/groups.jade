.container
    h1 Groups
    a.pull-right(href="/schedule/group_new")
        span.glyphicon.glyphicon-plus  Create new group
    table.table.table-hover.table-striped.table-condensed
        thead
            tr
                th Name
                th Description
                th Link to members
                th Link to group schedule
                th
        tbody
            tr(ng-repeat="group in groups | orderBy: 'name' ")
                td
                    a(href="/schedule/group_edit/{{group._id}}") {{group.name}}
                td {{group.description}}
                td
                    a(href="/schedule/member/{{group._id}}") Members
                td
                    a(href="/schedule/groupAvailability/{{group._id}}/{{year}}/{{month}}") Group Schedule
                td
                    button.btn.btn-primary(ng-click="delete(group)") Delete
